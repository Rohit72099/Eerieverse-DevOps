define host {
  use                     linux-server
  host_name               eerieverse
  alias                   EerieVerse App
  address                 {{ groups['app'][0] }}
}

define service {
  use                     generic-service
  host_name               eerieverse
  service_description     HTTP Check
  check_command           check_http!-I {{ hostvars[groups['app'][0]].ansible_host }} -p {{ PORT }}
}


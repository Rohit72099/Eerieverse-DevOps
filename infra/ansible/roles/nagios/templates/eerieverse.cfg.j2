define host {
    use                     linux-server
    host_name               eerieverse
    alias                   EerieVerse App Server
    address                 3.109.155.204
    check_command           check-host-alive
    max_check_attempts      3
    check_period           24x7
    notification_interval   30
    notification_period    24x7
    contacts              nagiosadmin
}

# Basic HTTP service check
define service {
    use                    generic-service
    host_name              eerieverse
    service_description    HTTP
    check_command         check_http!-I 3.109.155.204 -p 8000 -u /
    check_interval        3
    retry_interval        1
    max_check_attempts    3
}

# System checks
define service {
    use                    generic-service
    host_name              eerieverse
    service_description    CPU Load
    check_command         check_nrpe!check_load
}

define service {
    use                    generic-service
    host_name              eerieverse
    service_description    Disk Space
    check_command         check_nrpe!check_disk
}

define service {
    use                    generic-service
    host_name              eerieverse
    service_description    Memory Usage
    check_command         check_nrpe!check_mem
}
}

